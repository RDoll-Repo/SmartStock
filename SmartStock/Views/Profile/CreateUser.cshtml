@model SmartStock.Models.User
@using (Html.BeginForm(FormMethod.Post))
{
    if (Model.ActionType == SmartStock.Models.User.ActionTypes.RequiredFieldsMissing)
    {
        <div id="content-locked">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span>All fields are required.</span>
        </div>
    }
    if (Model.ActionType == SmartStock.Models.User.ActionTypes.InvalidPhoneNumber)
    {
        <div id="content-locked">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span>Please enter a valid phone number.</span>
        </div>
    }
    if (Model.ActionType == SmartStock.Models.User.ActionTypes.InvalidEmail)
    {
        <div id="content-locked">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span>Please enter a valid email.</span>
        </div>
    }
    if (Model.ActionType == SmartStock.Models.User.ActionTypes.NoRole)
    {
        <div id="content-locked">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span>Please select a role.</span>
        </div>
    }
    <div class="center-up">
        <form action="addUser">
            <table>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <h1>Add User</h1>
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.First_Name, "First Name:")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.First_Name, new { @autofocus = "autofocus" })
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.Last_Name, "Last Name:")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.Last_Name)
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.Email, "Email:")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.Email)
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.Phone_Number, "Phone Number")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.Phone_Number)
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.User_Name, "Username: ")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.User_Name)
                    </td>
                </tr>
                <tr>
                    <td class="table-label">
                        @Html.LabelFor(Model => Model.Password, "Password: ")
                    </td>
                    <td colspan="2">
                        @Html.TextBoxFor(Model => Model.Password)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.DropDownList("rolename", "Select a Role")
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center;">
                        <button id="btnAddUser" name="btnSubmit" value="adduser" class="button-action"><i class="fas fa-user-plus"></i> Add User</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>

}
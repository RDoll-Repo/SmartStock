@model IEnumerable<SmartStock.Models.TSupplier>
<h2>Delete Supplier</h2>

<h3>Are you sure you want to delete this supplier?</h3>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button id="btnBack" name="btnCancel" value="back" class="button-action"><i class="fa-solid fa-arrow-left"></i> Back</button>
            <button id="btnDeleteUser" name="btnSubmit" value="deleteSubmit" class="button-action"><i class="fas fa-user-plus"></i> Delete </button>
        </div>
    }
</div>

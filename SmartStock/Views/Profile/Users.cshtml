
@model IEnumerable<SmartStock.Models.TUser>
@{
    ViewBag.Title = "Users";
}
<h2>@ViewBag.Title</h2>

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(Model => Model.strFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.strLastName)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.strPhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.strEmail)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.strUserName)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.userPassword)
        </th>
        <th>
            @Html.DisplayNameFor(Model => Model.TRole.strRoleName)
        </th>
        <th>
            <form action="CreateUser">
                <input type="submit" value="+" />
            </form>
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.strFirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strLastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strPhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strEmail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strUserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.userPassword)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TRole.strRoleName)
    </td>
    <td colspan="2" style="text-align: center;">
        <button id="btnEditProduct" name="btnSubmit" value="Editproduct" class="button-action"><i class="fas fa-user-plus"></i>Edit</button>
    </td>
    <td colspan="2" style="text-align: center;">
        <button id="btnDeleteProduct" name="btnSubmit" value="Deleteproduct" class="button-action"><i class="fas fa-user-plus"></i>Delete</button>
    </td>
</tr>
    }
</table>



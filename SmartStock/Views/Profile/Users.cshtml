
@model IEnumerable<SmartStock.Models.TUser>
@{
    ViewBag.Title = "Users";
}
<h2>@ViewBag.Title</h2>

<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Phone")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Username")
        </th>
        <th>
            @Html.DisplayName("Password")
        </th>
        <th>
            @Html.DisplayName("Notes")
        </th>
        <th>
            <form action="CreateUser">
                <input type="submit" value="+" />
            </form>
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.strFirstName)
        @Html.DisplayFor(modelItem => item.strLastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strPhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strEmail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.strUserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.userPassword)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TRole.strRoleName)
    </td>
    <td colspan="2" style="text-align: center;">
        @Html.ActionLink(" ", "EditUser", new { User_ID = item.intUserID }, new { @class = "fa-solid fa-pen" })
        &nbsp;
        @Html.ActionLink(" ", "DeleteUser", new { User_ID = item.intUserID }, new { @class = "fa-solid fa-trash" })
    </td>
</tr>
    }
</table>




@model IEnumerable<SmartStock.Models.TUser>
@{
	ViewBag.Title = "Users";
}
<style>
	td {
		background-color: #252524;
	}

	th {
		background-color: #1b1a19;
	}

	th, td {
		vertical-align: middle;
	}

	table, td, th {
		border: 1px solid #3A3A38;
	}

	table {
		width: 1200px;
		border-collapse: collapse;
	}

	.button-action-edit-delete {
		padding: 4px 12px;
		width: 100px;
		background-color: dimgray;
		color: white;
	}

	.button-action-edit-delete:hover {
		background-color: gray;
	}
</style>

<h2>@ViewBag.Title</h2>

<table>
	<colgroup>
		<col style="width: 15%;">
		<col style="width: 15%;">
		<col style="width: 25%;">
		<col style="width: 10%;">
		<col style="width: 10%;">
		<col style="width: 1%;">
		<col style="width: 1%;">
	</colgroup>
	<thead>
		<tr>
			<th>
				@Html.DisplayName("Name")
			</th>
			<th>
				@Html.DisplayName("Phone")
			</th>
			<th>
				@Html.DisplayName("Email")
			</th>
			<th>
				@Html.DisplayName("Username")
			</th>
			<th>
				Role
			</th>
			<th>
				Edit
			</th>
			<th>
				Delete
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.strFirstName)
				@Html.DisplayFor(modelItem => item.strLastName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.strPhoneNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.strEmail)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.strUserName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TRole.strRoleName)
			</td>
			<td>
				<button class="button-action-edit-delete" onclick="location.href='@Url.Action("EditUser", "Profile", new { User_ID = item.intUserID })';"><i class="fa-solid fa-pen-to-square"></i> Edit</button>
			</td>
			<td>
				<button class="button-action-edit-delete" onclick="location.href='@Url.Action("DeleteUser", "Profile", new { User_ID = item.intUserID })';"><i class="fa-solid fa-trash"></i> Delete</button>
			</td>
		</tr>
		}
	</tbody>
</table>
<div style="text-align: right;">
	<form action="CreateUser">
		<input class="button-action" type="submit" value="+ Add User" />
	</form>
</div>